<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MovieMatch"
                android:textColor="@color/text_white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/shape_circle_indigo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_filter_badge"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_sliders"
                app:tint="@color/text_slate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Комедии • 2020+"
                android:textColor="@color/text_slate"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/card_stack"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipChildren="false"
        app:layout_constraintBottom_toTopOf="@+id/actions_row"
        app:layout_constraintHeight_percent="0.65"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintVertical_bias="0.45">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="-15dp"
            android:alpha="0.6"
            app:cardBackgroundColor="@color/element_dark"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp" />

        <include
            layout="@layout/item_swipe_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginHorizontal="32dp" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/actions_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav_container">

        <ImageButton
            android:id="@+id/btn_dislike"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_circle_btn_dislike"
            android:src="@drawable/ic_close"
            app:tint="#EF4444" />

        <ImageButton
            android:id="@+id/btn_info"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="25dp"
            android:background="@drawable/bg_circle_btn_info"
            android:src="@drawable/ic_info"
            app:tint="#3B82F6" />

        <ImageButton
            android:id="@+id/btn_like"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_circle_btn_like"
            android:elevation="10dp"
            android:src="@drawable/ic_heart_filled"
            app:tint="@color/text_white" />
    </LinearLayout>

    <include
        android:id="@+id/bottom_nav_container"
        layout="@layout/layout_bottom_nav_lobby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>