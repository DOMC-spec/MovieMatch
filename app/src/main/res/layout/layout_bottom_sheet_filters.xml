<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_bottom_sheet_surface"
    android:minHeight="600dp">

    <View
        android:id="@+id/drag_handle"
        android:layout_width="40dp"
        android:layout_height="5dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_circle_dot"
        android:backgroundTint="#475569"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sheet_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingTop="20dp"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toBottomOf="@id/drag_handle">

        <TextView
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сбросить"
            android:textColor="#94A3B8"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Фильтры"
            android:textColor="@color/text_white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            app:tint="@color/text_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#334155"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingHorizontal="24dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/footer"
        app:layout_constraintTop_toBottomOf="@id/sheet_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/SettingsLabel"
                android:layout_marginHorizontal="0dp"
                android:text="Тип контента" />

            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                app:chipSpacing="10dp"
                app:selectionRequired="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    style="@style/CustomChip"
                    android:text="Фильмы"
                    android:checked="true" />

                <com.google.android.material.chip.Chip
                    style="@style/CustomChip"
                    android:text="Сериалы" />

                <com.google.android.material.chip.Chip
                    style="@style/CustomChip"
                    android:text="Мультфильмы" />

                <com.google.android.material.chip.Chip
                    style="@style/CustomChip"
                    android:text="Аниме" />
            </com.google.android.material.chip.ChipGroup>

            <TextView
                style="@style/SettingsLabel"
                android:layout_marginHorizontal="0dp"
                android:text="Жанры" />

            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                app:chipSpacing="10dp"
                app:singleSelection="false">

                <com.google.android.material.chip.Chip
                    style="@style/CustomChip"
                    android:text="Комедия"
                    android:checked="true" />

                <com.google.android.material.chip.Chip
                    style="@style/CustomChip"
                    android:text="Боевик"
                    android:checked="true" />

                <com.google.android.material.chip.Chip
                    style="@style/CustomChip"
                    android:text="Драма" />

                <com.google.android.material.chip.Chip
                    style="@style/CustomChip"
                    android:text="Ужасы" />

                <com.google.android.material.chip.Chip
                    style="@style/CustomChip"
                    android:text="Фантастика" />

                <com.google.android.material.chip.Chip
                    style="@style/CustomChip"
                    android:text="Триллер" />
            </com.google.android.material.chip.ChipGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    style="@style/SettingsLabel"
                    android:layout_marginHorizontal="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_weight="1"
                    android:text="Год выпуска" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1990 — 2024"
                    android:textColor="@color/accent_indigo"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
            </LinearLayout>

            <com.google.android.material.slider.RangeSlider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="1970"
                android:valueTo="2024"
                app:values="@array/initial_slider_values"
                app:trackColorInactive="#334155"
                app:trackColorActive="@color/accent_indigo"
                app:thumbColor="@color/text_white"
                app:thumbStrokeColor="@color/accent_indigo"
                app:thumbStrokeWidth="2dp"
                app:haloColor="#336366F1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="25dp">
                <TextView android:text="1970" android:textColor="#64748B" android:textSize="12sp"/>
                <TextView android:text="2024" android:textColor="#64748B" android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    style="@style/SettingsLabel"
                    android:layout_marginHorizontal="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_weight="1"
                    android:text="Рейтинг (минимум)" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7.0+"
                    android:textColor="@color/rating_gold"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rating_track"
                android:orientation="horizontal"
                android:padding="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    android:text="Любой"
                    android:textColor="#CBD5E1"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    android:text="5+"
                    android:textColor="#CBD5E1"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    android:text="6+"
                    android:textColor="#CBD5E1"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_rating_selected"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    android:text="7+"
                    android:textColor="#0F172A"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    android:text="8+"
                    android:textColor="#CBD5E1"
                    android:textStyle="bold"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/element_dark"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingVertical="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="20dp"
            android:background="#334155" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_apply"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_gradient_indigo"
            android:text="Применить фильтры"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="false" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>