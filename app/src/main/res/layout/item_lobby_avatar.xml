<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="64dp"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="54dp"
        android:layout_height="54dp">

        <FrameLayout
            android:id="@+id/avatar_bg"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_slot_empty">

            <TextView
                android:id="@+id/avatar_initials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/text_white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="AS"
                tools:visibility="visible" />
        </FrameLayout>

        <TextView
            android:id="@+id/admin_badge"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/bg_admin_badge"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:text="♔"
            android:textColor="#000000"
            android:textSize="10sp"
            android:visibility="gone"
            tools:visibility="visible" /> </FrameLayout>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="Пусто"
        android:textColor="@color/text_slate"
        android:textSize="10sp"
        tools:text="Аня"
        tools:textColor="@color/text_white" />

</LinearLayout>