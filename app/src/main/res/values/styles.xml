<resources>
    <style name="SettingsLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/text_slate</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SettingsCardGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="cardBackgroundColor">@color/element_dark</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="SettingsDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#334155</item>
    </style>

    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@drawable/selector_chip_background</item>
        <item name="android:textColor">@color/selector_chip_text</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="checkedIconVisible">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
        <item name="android:minHeight">44dp</item>
        <item name="ensureMinTouchTargetSize">false</item>
    </style>

</resources>